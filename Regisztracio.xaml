<Window x:Class="ugyfel.Regisztracio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ugyfel"
        mc:Ignorable="d"
        Title="Regisztracio" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="181*"/>
        </Grid.RowDefinitions>
        <Label FontSize="30" Content="REGISZTRÁCIÓ" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top"/>
        <Label FontSize="20" Content="Felhasználónév:" HorizontalAlignment="Left" Margin="270,28,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="felhasznalo" FontSize="20" HorizontalAlignment="Left" Margin="418,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <Label FontSize="20" Content="Jelszó:" HorizontalAlignment="Left" Margin="270,70,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <PasswordBox x:Name="jelszo" FontSize="20" HorizontalAlignment="Left" Margin="335,74,0,0" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <Label FontSize="20" Content="Jelszó újra:" HorizontalAlignment="Left" Margin="270,108,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <PasswordBox x:Name="jelszoujra" FontSize="20" HorizontalAlignment="Left" Margin="375,116,0,0" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <Label FontSize="20" Content="E-mail:" HorizontalAlignment="Left" Margin="270,150,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="email" FontSize="20" HorizontalAlignment="Left" Margin="345,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <Button x:Name="gomb" FontSize="20" Content="Regisztrálok" HorizontalAlignment="Center" Margin="0,266,0,0" VerticalAlignment="Top" Click="gomb_Click" Grid.Row="1"/>

    </Grid>
</Window>
